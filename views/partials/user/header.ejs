        /*off canvas*/
        
        /* Hamburger Menu */
        .canvas__open {
         display: inline-block;
         cursor: pointer;
         font-size: 24px;
         z-index: 2000;
        }
        
        .offcanvas-menu-wrapper {
         position: fixed;
         top: 0;
         right: -300px; /* Hidden by default */
         width: 300px;
         height: 100%;
         background: #fff;
         box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
         z-index: 1000;
         transition: right 0.3s ease;
         padding: 20px;
        }
        
        .offcanvas-menu-wrapper ul {
         list-style: none;
         padding: 0;
         margin: 0;
        }
        
        .offcanvas-menu-wrapper ul li {
         margin-bottom: 15px;
        }
        
        .offcanvas-menu-wrapper ul li a {
         text-decoration: none;
         color: #333;
         font-size: 18px;
         font-weight: 600;
        }
        
        .offcanvas-menu-overlay {
         position: fixed;
         top: 0;
         left: 0;
         width: 100%;
         height: 100%;
         background: rgba(0, 0, 0, 0.5);
         display: none; /* Hidden by default */
         z-index: 900;
         transition: opacity 0.3s ease;
         opacity: 0;
        }
        .canvas__open {
            display: none; /* Hide by default */
        }
        
        @media (max-width: 765px) {
            .canvas__open {
                display: inline-block; /* Show on screens below 766px */
            }
        }
        
        /* Checkbox Hack: When checked, show the menu */
        #menu-toggle:checked ~ .offcanvas-menu-wrapper {
         right: 0; /* Slide in */
        }
        
        #menu-toggle:checked ~ .offcanvas-menu-overlay {
         display: block;
         opacity: 1;
        }
</style>
