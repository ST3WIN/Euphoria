                    return;
                }
        
                // If validation passes, proceed with the filter
                window.location.href = `/admin?filterType=custom&startDate=${startDate}&endDate=${endDate}`;
            } else {
                window.location.href = '/admin?filterType=' + filterType;
            }
        });
