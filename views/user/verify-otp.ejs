<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <form id="otpForm" class="card p-4 shadow-sm" action="/verify-otp" method="post" onsubmit="return validateOTPForm()">
                <h2 class="mb-4 text-center">OTP Verification</h2>
                <input 
                    type="text" 
                    name="otp" 
                    id="otp"
                    class="form-control mb-3 text-center" 
                    placeholder="Enter OTP" 
                    maxlength="6" 
                    pattern="\d{6}" 
                    required
                >
                <button type="submit" class="btn btn-dark w-100 mb-2">Verify</button>
                <button 
                    type="button" 
                    class="btn btn-link w-100 p-0 text-decoration-underline" 
                    id="resend-button"
                    onclick="resendOTP()" 
                    disabled
                >
                    Resend OTP
                </button>
                <div class="timer text-center" id="timer">Resend available in 60 seconds</div>
            </form>
        </div>
    </div>
</div>
<script src=" https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.all.min.js "></script>
<script>
    const otpForm = document.getElementById('otpForm');
    const timerElement = document.getElementById('timer');
    const resendButton = document.getElementById('resend-button');
    
    let timeLeft = 60;
    let countdownInterval;

    function startCountdown() {
        // Clear any existing interval
        if (countdownInterval) {
            clearInterval(countdownInterval);
        }

        timeLeft = 60;
        resendButton.disabled = true;

        countdownInterval = setInterval(() => {
            if (timeLeft <= 0) {
                clearInterval(countdownInterval);
                timerElement.textContent = '';
                resendButton.disabled = false;
            } else {
                timerElement.textContent = `Resend available in ${timeLeft} seconds`;
                timeLeft--;
            }
        }, 1000);
    }

    // Initial countdown
    startCountdown();

    function resendOTP(){
        clearInterval(countdownInterval)
        timeLeft = 60
        document.getElementById("otp").disabled=false
        startCountdown()
        $.ajax({
            type:"POST",
            url:"/resend-otp",
            success: function(response){
                if(response.success){
                Swal.fire({
                    icon:"success",
                    title:"OTP successfully send",
                    showConfirmButton:false,
                    timer:1500
                })
              }else{
                Swal.fire({
                    icon:"error",
                    title:"Error",
                    text:"An error has occured. Please try again"
                })
              } 
            }
        })
        return false
    }

    
    function validateOTPForm(){
        const otpInput = document.getElementById("otp").value
        $.ajax({
            type:"POST",
            url:"verify-otp",
            data:{otp:otpInput},
            success:function(response){
                if(response.success){
                    Swal.fire({
                        icon:"success",
                        title:"OTP verified successfully",
                        showConfirmButton:false,
                        timer:1500
                    }).then(()=>{
                        window.location.href = response.redirectUrl
                    })
                }else{
                    Swal.fire({
                        icon:"error",
                        title:"Error",
                        text:response.message
                    })
                }
            },error:function(){
                Swal.fire({
                    icon:"error",
                    title:"Invalid OTP",
                    text:"Please try again"
                })
            }
        })
        return false
    }
    
</script>

